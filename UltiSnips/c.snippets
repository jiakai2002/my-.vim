snippet swap
void swap(int* a, int* b) {
	int t = *a;
	*a = *b;
	*b = t;
}
endsnippet

snippet prime "classic prime test"
int is_prime(int n) {
	if (n==2 || n==3)
		return 1;
	if (n <= 1 || n%2==0 || n%3==0)
		return 0;
	for (int i=5; i*i <= n; i+=6) {
		if (n%i == 0 || n%(i+2) == 0)
			return 0;
	}
	return 1;
}
endsnippet

snippet gcd "Euclid's"
int gcd(a, b) {
	if (b == 0)
		return a;
	else
		gcd(b, a%b);
}
endsnippet

snippet qsort
int comp (const void * a, const void * b) {
	int *x = (int*)a;
	int *y = (int*)b;
	return (*x - *y);	
	//return (*y - *x); //for reverse order
}
qsort (arr, sizeof(arr)/sizeof(*arr), sizeof(*arr), comp);
endsnippet

snippet gmin
int get_min(int arr[], int n) {
	int min = INT_MAX;
	for (int i=0; i<n; i++) {
		if (arr[i] < min)
			min = arr[i];
	}
	return min;
}
endsnippet

snippet gmax
int get_max(int arr[], int n) {
	int max = INT_MIN;
	for (int i=0; i<n; i++) {
		if (arr[i] > max)
			max = arr[i];
	}
	return max;
}
endsnippet

